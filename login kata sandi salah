from lib2to3.pgen2 import driver
import time
from urllib import response
from selenium import webdriver
from selenium.webdriver.common.by import By
from webdriver_manager.chrome import ChromeDriverManager

driver = webdriver.Chrome(ChromeDriverManager().install())

driver.get("https://myappventure.herokuapp.com/login") #buka web browser
time.sleep(2)
driver.find_element(By.NAME, "email").send_keys("didi@gmail.com") #insert email
time.sleep(2)
driver.find_element(By.NAME, "password").send_keys("qwerty102") # insert password
time.sleep(2)
driver.find_element(By.XPATH, "/html/body/div/main/div/div/form/div[4]/button").click() #klik login
time.sleep(10)

#respon gagal login kata sandi salah
response_login = driver.find_element(By.XPATH, "/html/body/div/main/div/div/form/div[2]/p").text
assert "Kata Sandi Salah" in response_login
    
driver.close() #brwoser ditutup
